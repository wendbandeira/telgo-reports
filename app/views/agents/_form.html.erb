<div class='small-8 column' id='content'>
  <%= form_for(@agent) do |f| %>
    <% if @agent.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@agent.errors.count, "error") %> prohibited this agent from being saved:</h2>

        <ul>
        <% @agent.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :nome %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :codigo_agente %><br>
      <%= f.text_field :codeagent %>
    </div>
